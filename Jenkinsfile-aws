pipeline {
    agent any

    environment {
      NETLIFY_SITE_ID = '2fbd0171-f68f-40df-8e55-cc2d8bf8dd24'
      NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {

        stage('AWS Cli image') {
            agent {
                docker {
                    image 'amazon/aws-cli:latest'
                }
            }
            steps {
                sh '''
                aws --version
                '''
            }
        }
        
    }
}
